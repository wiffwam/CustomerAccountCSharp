<Window x:Class="Final_Project_2017.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Final_Project_2017"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="800"
        Width="900">
    <Grid>
        <ListBox x:Name="AccountListbox"
                 HorizontalAlignment="Left"
                 Height="184"
                 Margin="29,35,0,0"
                 VerticalAlignment="Top"
                 Width="837"
                 SelectionChanged="AccountListbox_SelectionChanged"
                 FontFamily="Consolas" />
        <Label x:Name="label"
               Content="Account Number"
               HorizontalAlignment="Left"
               Height="28"
               Margin="30,241,0,0"
               VerticalAlignment="Top"
               Width="116" />
        <Label x:Name="label_Copy1"
               Content="Last Name"
               HorizontalAlignment="Left"
               Height="28"
               Margin="511,274,0,0"
               VerticalAlignment="Top"
               Width="116" />
        <Label x:Name="label_Copy2"
               Content="Balance"
               HorizontalAlignment="Left"
               Height="28"
               Margin="30,340,0,0"
               VerticalAlignment="Top"
               Width="116" />
        <Label x:Name="label_Copy3"
               Content="Phone"
               HorizontalAlignment="Left"
               Height="28"
               Margin="30,307,0,0"
               VerticalAlignment="Top"
               Width="116" />
        <Label x:Name="label_Copy4"
               Content="First Name"
               HorizontalAlignment="Left"
               Height="28"
               Margin="29,274,0,0"
               VerticalAlignment="Top"
               Width="116" />
